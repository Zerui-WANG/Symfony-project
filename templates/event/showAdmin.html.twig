{% extends 'base.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
    <h1>Event</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ event.id }}</td>
        </tr>
        <tr>
            <th>NameQuestion</th>
            <td>{{ event.nameQuestion }}</td>
        </tr>
        <tr>
            <th>DescriptionQuestion</th>
            <td>{{ event.descriptionQuestion }}</td>
        </tr>
        <tr>
            <th>Cooldown</th>
            <td>{{ event.cooldown }}</td>
        </tr>
        <tr>
            <th>Frequency</th>
            <td>{{ event.frequency }}</td>
        </tr>
        <tr>
            <th>Cooldown min</th>
            <td>{{ event.cooldownMin }}</td>
        </tr>
        <tr>
            <th>Cooldown max</th>
            <td>{{ event.cooldownMax }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_event_index') }}" class="btn btn-primary">back to list</a>

    <a href="{{ path('admin_event_edit', {'id': event.id}) }}" class="btn btn-warning">edit</a>

    {{ include('event/_delete_form.html.twig') }}
{% endblock %}
