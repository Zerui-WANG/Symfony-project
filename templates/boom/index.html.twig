{% extends 'base.html.twig' %}

{% block title %}BoomController{% endblock %}

{% block body %}

    <table class="table-bordered" style="margin-left:auto;margin-right: auto; width: 30%">
        <thead>
        <tr>
            <th colspan="5" style="text-align: center">Boom</th>
        </tr>
        </thead>

        <tbody>
            {% for row in students|batch(5) %}
            <tr>
                {% for student in row %}
                    <td>
                        {% if student.isPresent == true %}
                            {% if  student.grade  < 8 %}
                                <img src="{{ asset('assets/img/badGrade.jpg') }}" alt="badGrade" width="100%"/>
                            {% elseif student.grade  < 14 %}
                                <img src="{{ asset('assets/img/mediumGrade.jpg') }}" alt="mediumGrade" width="100%"/>
                            {% else %}
                                <img src="{{ asset('assets/img/goodGrade.jpg') }}" alt="goodGrade" width=" 100%"/>
                            {% endif %}
                        {% else %}
                            <img src="{{ asset('assets/img/isntPresent.jpg') }}" alt="isntPresent" width=" 100%"/>
                        {% endif %}
                    </td>
                {% endfor %}
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <table style="margin-left:auto;margin-right: auto;">
        <tr>
            <th style="text-align: center">
                {{ action.nameQuestion }} : {{ action.descriptionQuestion }}
            </th>
        </tr>
        <tr>
            <td>
                {% for answer in action.answers %}
                <a href="{{ path('studentUpdate', {'idAnswer': answer.id}) }}">
                    <button>{{ answer.descriptionAnswer }}</button>
                </a>
                {% endfor %}
            </td>
        </tr>
    </table>




   <!-- Bootstrap core JS-->




    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Third party plugin JS-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js"></script>
    <!-- Core theme JS-->
    <script src="js/scripts.js"></script>
{% endblock %}
