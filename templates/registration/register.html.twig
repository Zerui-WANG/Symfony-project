{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <h1><center>Inscription sur le site</center></h1>
    <br>
    {{ form_start(form)}}
    {{ form_row(form.pseudo, {'label': 'Nom d\utilisateur','attr' : {'placeholder' : 'Pseudo...'}}) }}
    {{ form_row(form.email, {'label':'Adresse mail ','attr' : {'placeholder' : 'Adresse mail...'}}) }}
    {{ form_row(form.password,{'label':'Mot de passe ','attr' : {'placeholder' : 'Mot de passe'}}) }}
    {{ form_row(form.confirm_password,{'label':'Confirmation mot de passe ','attr' : {'placeholder' : 'Retaper votre mot de passe'}}) }}

    <button type="submit" class ="btn btn-success">S'inscrire!</button>
    {{ form_end(form) }}
{% endblock %}
