{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
    <br>
    <h1>Liste des utilisateurs</h1>
    <br>
    <table class="table table-hover">
        <thead>
            <tr>
            <th>ID</th>
            <th>Email</th>
            <th>RÃ´les</th>
            <th>Username</th>
            <th>Game ID</th>
            <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{% for role in user.roles%}
                        {% if  role == "ROLE_USER"%}
                            Utilisateur
                        {% elseif  role == "ROLE_ADMIN"%}
                            Administrateur
                        {% endif %}
                    {% endfor %}
                </td>
                <td>{{ user.username }}</td>
                <td>{{ user.game.id }}</td>
                <td><a href="{{ path('admin_edit_user',{'id' :user.id}) }}" class="btn btn-warning">Modifier</a></td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">Il n'y a pas d'utlisateur inscrit</td>
                </tr>
            {% endfor %}

        </tbody>
    </table>
{% endblock %}
