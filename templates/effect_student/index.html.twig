{% extends 'base.html.twig' %}

{% block title %}EffectStudent index{% endblock %}

{% block body %}
    <h1>EffectStudent index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>ValueEffectStudent</th>
                <th>CharacteristicStudent</th>
                <th>Answers</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for effect_student in effect_students %}
            <tr>
                <td>{{ effect_student.id }}</td>
                <td>{{ effect_student.valueEffectStudent }}</td>
                <td>{{ effect_student.characteristicStudent }}</td>
                <td>
                    {% for answer in effect_student.answers %}
                        {{ answer }} <br/>
                    {% endfor %}
                </td>
                <td>
                    <a href="{{ path('admin_effect_student_show', {'id': effect_student.id}) }}"
                        class="btn btn-warning">show</a>
                    <a href="{{ path('admin_effect_student_edit', {'id': effect_student.id}) }}"
                       class="btn btn-info">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_effect_student_new') }}" class="btn btn-success">Create new</a>
{% endblock %}
